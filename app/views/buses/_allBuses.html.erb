<table class="table table-striped">
  <thead>
    <tr>
      <th>Bus Name</th>
      <th>Bus Number</th>
      <th>Bus Type</th>
      <th>No of Seats</th>
      <th>Price of a Single Seat</th>
      <th>Departure Date/Time</th>
      <th>Departure Location</th>
      <th>Arrival Date/Time</th>
      <th>Arrival Location</th>
      <th>Owned By</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.bus_name %></td>
        <td><%= bus.bus_number %></td>
        <td><%= bus.bus_type %></td>
        <td><%= bus.number_of_seats %></td>
        <td><%= bus.price_of_a_single_seat %></td>
        <td><%= bus.departure_datetime.strftime('%Y-%m-%d %H:%M') if bus.departure_datetime %></td>
        <td><%= bus.departure_location %></td>
        <td><%= bus.arrival_datetime.strftime('%Y-%m-%d %H:%M') if bus.arrival_datetime %></td>
        <td><%= bus.arrival_location %></td>
        <td><%= bus.user.name %></td>
        <td><%= link_to "Book Seat", new_bus_seat_path(bus), class: "btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
