<h1>Seats for <%= @bus.bus_name %></h1>

<br>
<%= form_with url: new_bus_booking_path(@bus), method: :get, local: true do |form| %>
  <div class="form-group">
    <h4><%= form.label :date, "Select Date" %></h4>
    <%= form.date_field :date, value: @date, class: "form-control", min: Date.today %>
  </div>
  <br>
  <%= form.submit "View Available Seats", data: { turbo_frame: "modal", bs_toggle: "modal", bs_target: "#seatsModal" }, class: "btn btn-primary" %>
<% end %>

<br>

<div class="modal fade" id="seatsModal" tabindex="-1" aria-labelledby="seatsModalLabel" aria-hidden="true" data-controller="hello">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="seatsModalLabel">Select Seats</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= turbo_frame_tag "modal" do %>
          <%= form_with url: bus_bookings_path(@bus), method: :post, local: true, id: "seats-form" do |form| %>
            <div id="seats-container">
              <% if @seats.any? && @date >= Date.today.strftime("%Y-%m-%d") %>
                <div class="seats-grid">
                  <% @seats.in_groups_of(2, false) do |seat_row| %>
                    <div class="seat-row">
                      <% seat_row.compact.each do |seat| %>
                        <div class="<%= @seat_ids.include?(seat.id) ? 'bg-danger' : 'bg-success' %>" style="<%= @seat_ids.include?(seat.id) ? 'pointer-events: none;' : '' %>">
                          <div class="seat-checkbox <%= 'unavailable' unless seat.available?(@date) %>">
                            <label>
                              <%= check_box_tag "seats[]", seat.id, false, class: "seat-checkbox-input", data: { seat_id: seat.id, seat_number: seat.seat_number }, disabled: !seat.available?(@date), onchange: "colorChange(event);" %>
                              <span class="seat-number"><%= seat.seat_number %></span>
                            </label>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="text-black">Please Select a valid Date !!!!!!!!!!!!!!!!!!!!!</p>
              <% end %>
            </div>
            <br>
            <%= hidden_field_tag :date, @date %>
            
            <% if @date.present? %>
              <div class="actions">
                <%= turbo_frame_tag "seats-form" do %>
                  <%= submit_tag "Pay Amount for Seats", class: "btn btn-primary", onclick: "return validateSeatsSelection();" %>
                <% end %>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <br>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<%= link_to "Back to Bus", bus_path(@bus), class: "btn btn-secondary" %>


 


